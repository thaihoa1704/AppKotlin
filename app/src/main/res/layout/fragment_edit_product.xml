<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:clickable="true"
    android:id="@+id/frame_layout_edit_product"
    tools:context=".ui.fragment.manage.EditProductFragment">
    <ImageView
        android:id="@+id/img_back"
        android:layout_width="25dp"
        android:layout_height="24dp"
        android:layout_marginLeft="4dp"
        android:src="@drawable/back_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/line"/>
    <TextView
        android:id="@+id/tv_label"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:gravity="center"
        android:text="Cập nhật thông tin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_label"/>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Phân loại:"
                android:textSize="22dp"
                android:gravity="center"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_category_name"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="22dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/tv_category"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Tên sản phẩm:"
                android:textSize="22dp"
                android:gravity="center"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_category"/>
            <EditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" Nhập tên sản phẩm"
                android:textSize="21dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_name"/>
            <TextView
                android:id="@+id/tv_brand"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="Thương hiệu:"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:gravity="center|left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_name"/>
            <TextView
                android:id="@+id/tv_brand_name"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:textSize="22dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/tv_brand"
                app:layout_constraintTop_toBottomOf="@+id/edt_name"/>
            <TextView
                android:id="@+id/tv_image"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="Hình ảnh:"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:gravity="center|left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_brand"/>
            <ImageView
                android:id="@+id/img_add_image"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/add_icon"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_add"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_brand"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_image"/>
            <TextView
                android:id="@+id/tv_color"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="Màu sắc:"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:gravity="center|left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rcv_image"/>
            <TextView
                android:id="@+id/tv_color_name"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="22dp"
                android:gravity="center|left"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/tv_color"
                app:layout_constraintTop_toBottomOf="@+id/rcv_image"/>
            <ImageView
                android:id="@+id/img_add_color"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_add"
                android:src="@drawable/add_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rcv_image" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_color"/>
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Mô tả:"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:gravity="center|left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rcv_color"/>
            <EditText
                android:id="@+id/edt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" Mô tả sản phẩm"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_description"/>
            <TextView
                android:id="@+id/tv_version"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="Phiên bản:"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:gravity="center|left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_description"/>
            <ImageView
                android:id="@+id/img_add_version"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/add_icon"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_add"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_description"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_version">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_version"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible" />
                </HorizontalScrollView>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>